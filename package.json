  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1",
    "@types/chrome": "^0.1.1",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.0",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  }
}
