{
  "name": "snow",
  "version": "1.0.0",
  "description": "Browser extension for E2E test case recording via chat interface",
  "type": "module",
  "scripts": {
    "lint": "biome lint",
    "format": "biome format --write",
    "build": "pnpm --filter @snow/extension build",
    "dev": "pnpm --filter @snow/extension dev"
  },
  "workspaces": ["packages/*"],
